MDScreenManager:
    
    MDScreen:
        name: "initial"
        md_bg_color: 189/255, 159/255, 131/255, 1
        MDHeroFrom:
            id: hero_from
            tag: "hero"
            size_hint: None, None
            size: "200dp", "200dp"
            pos_hint: {"center_x": .5, "center_y": .66}
            FitImage:
                source: "images/logo.png"
                size_hint: None, None
                size: hero_from.size

        MDFloatLayout:
            MDFillRoundFlatButton:
                text: "SOBRE"
                font_style: "Button"
                md_bg_color: 100/255, 37/255, 9/255, 1
                size_hint: .6, .09
                pos_hint: {"center_x": .5, "center_y":.28}
                on_release:
                    root.current_heroes = ["hero"]
                    root.current = "about"
                    root.transition.direction = "left"

            MDFillRoundFlatButton:
                text: "COMEÇAR AGORA"
                font_style: "Button"
                md_bg_color: 100/255, 37/255, 9/255, 1
                size_hint: .6, .09
                pos_hint: {"center_x": .5, "center_y":.4}
                on_release:
                    app.root.current_heroes = ["hero"]
                    app.root.current = "login"
                    app.root.transition.direction = "left"

    MDScreen:
        name: "about"
        hero_to: hero_to_about
        md_bg_color: 189/255, 159/255, 131/255, 1
        MDHeroTo:
            id: hero_to_about
            tag: "hero"
            size_hint: None, None
            size: "220dp", "220dp"
            pos_hint: {"center_x": .5, "center_y": .85}

        MDFloatLayout:
            size_hint: 1, 1
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: .85, .65 
                md_bg_color: 1, 1, 1, 1
                padding: .75, .75, .75, .75

                MDLabel:
                    text: "Sobre nós:"
                    pos_hint: {"center_x": .52, "center_y": .75}
                    font_name: "fonts/Poppins-SemiBold.ttf"
                    font_style: "Button"
                    theme_text_color: "Custom"
                    text_color: 66/255, 35/255, 21/255, 1
                MDLabel:
                    text: "SOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\nSOBRE SOBRE SOBRE SOBRE\n"
                    pos_hint: {"center_x": .52, "center_y": .60}
                    theme_text_color: "Custom"
                    text_color: 66/255, 35/255, 21/255, 1

                    MDIconButton:
                        icon: "chevron-triple-left"
                        icon_size: "43sp"
                        theme_icon_color: "Custom"
                        icon_color: 156/255, 93/255, 65/255, 1
                        pos_hint: {"center_x": .15, "center_y": .09} 
                        on_release:
                            app.root.current = "initial"
                            app.root.transition.direction = "right"
                            app.root.current_heroes = ["hero"]

    MDScreen:
        name: "login"
        hero_to: hero_to_login
        md_bg_color: 189/255, 159/255, 131/255, 1

        MDHeroTo:
            id: hero_to_login
            tag: "hero"
            size_hint: None, None
            size: "220dp", "220dp"
            pos_hint: {"center_x": .5, "center_y": .85}
        
        MDFloatLayout:
            size_hint: 1, 1
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .55}
                size_hint: .78, 1
                MDTextField:
                    id: name
                    size_hint: 1, None
                    height: "30dp"
                    font_size: "18dp"
                    text_color_normal: "gray"
                    text_color_focus: "white"
                    pos_hint: {"center_x": .5, "center_y": .56}
                    hint_text: "Nome:"
                    multiline: False
                    line_color_normal: "black"
                    line_color_focus: "maroon"
                    hint_text_color_normal: "black"
                    hint_text_color_focus: "maroon"
                    cursor_width: "2sp"
                    icon_left: "account"
                    icon_left_color_normal: "gray"
                    icon_left_color_focus: "black"

                MDTextField:
                    id: email
                    size_hint: 1, None
                    height: "30dp"
                    font_size: "18dp"
                    text_color_normal: "gray"
                    text_color_focus: "white"
                    pos_hint: {"center_x": .5, "center_y": .44}
                    hint_text: "Email:"
                    multiline: False
                    line_color_normal: "black"
                    line_color_focus: "maroon"
                    hint_text_color_normal: "black"
                    hint_text_color_focus: "maroon"
                    cursor_width: "2sp"
                    icon_left: "gmail"
                    icon_left_color_normal: "gray"
                    icon_left_color_focus: "black"

                MDTextField:
                    id: password
                    size_hint: 1, None
                    height: "30dp"
                    font_size: "18dp"
                    text_color_normal: "gray"
                    text_color_focus: "white"
                    pos_hint: {"center_x": .5, "center_y": .32}
                    hint_text: "Senha:"
                    multiline: False
                    line_color_normal: "black"
                    line_color_focus: "maroon"
                    hint_text_color_normal: "black"
                    hint_text_color_focus: "maroon"
                    cursor_width: "2sp"
                    password: True
                    icon_left: "key-variant"
                    icon_left_color_normal: "gray"
                    icon_left_color_focus: "black"

                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_x": 0.95, "center_y": .32}
                    pos: password.width - self.width + dp(8), 0
                    theme_text_color: "Hint"

                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        password.password = False if password.password == True else True



            MDFillRoundFlatButton:
                text: "SUBMIT"
                font_style: "Button"
                md_bg_color: 100/255, 37/255, 9/255, 1
                size_hint: .6, .09
                pos_hint: {"center_x": .5, "center_y":.20}

        MDIconButton:
            icon: "chevron-triple-left"
            icon_size: "43sp"
            theme_icon_color: "Custom"
            icon_color: 156/255, 93/255, 65/255, 1
            pos_hint: {"center_x": .10, "center_y": .06} 
            on_release:
                app.root.current = "initial"
                app.root.transition.direction = "right"
                app.root.current_heroes = ["hero"]
